{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020", // Compile to ES2020 (modern Node.js)
    "lib": ["ES2020"], // Include ES2020 library definitions
    "module": "commonjs", // Output CommonJS modules for Node.js

    // Module Resolution
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON files
    "allowSyntheticDefaultImports": true, // Allow default imports from modules
    "esModuleInterop": true, // Enable CommonJS/ES module interop

    // Emit
    "outDir": "./dist", // Output compiled JavaScript to dist folder
    "rootDir": "./src", // Root directory of source files
    "sourceMap": true, // Generate source maps for debugging
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Generate declaration source maps
    "removeComments": true, // Remove comments in output

    // Type Checking (Strict Mode)
    "strict": true, // Enable all strict type checking options
    "noImplicitAny": true, // Error on expressions with implicit any
    "strictNullChecks": true, // Enable strict null checks
    "strictFunctionTypes": true, // Enable strict function type checking
    "strictBindCallApply": true, // Enable strict bind/call/apply checks
    "strictPropertyInitialization": true, // Check property initialization
    "noImplicitThis": true, // Error on this with implicit any type
    "alwaysStrict": true, // Parse in strict mode

    // Additional Checks
    "noUnusedLocals": true, // Error on unused local variables
    "noUnusedParameters": true, // Error on unused function parameters
    "noImplicitReturns": true, // Error if function doesn't return
    "noFallthroughCasesInSwitch": true, // Error on fallthrough cases in switch
    "noUncheckedIndexedAccess": true, // Add undefined to index signature results
    "noImplicitOverride": true, // Check override methods in inheritance
    "noPropertyAccessFromIndexSignature": true, // Require index access for properties

    // Interop Constraints
    "forceConsistentCasingInFileNames": true, // Enforce consistent file casing
    "isolatedModules": true, // Each file can be transpiled independently

    // Experimental
    "experimentalDecorators": true, // Enable decorators (for MongoDB schemas)
    "emitDecoratorMetadata": true, // Emit metadata for decorators

    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@middleware/*": ["src/middleware/*"],
      "@types/*": ["src/types/*"]
    }
  },

  "include": ["src/**/*"],

  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
